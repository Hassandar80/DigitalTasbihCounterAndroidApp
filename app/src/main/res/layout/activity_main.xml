<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mainLayout"
    android:gravity="center"
    tools:context="com.hassandar.digitaltasbih.MainActivity"
    android:background="@drawable/bg">



    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-110dp">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="-3dp"
            android:id="@+id/addvibrator"
            android:background="@drawable/vibrate_on" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:id="@+id/btnTheme"
            android:onClick="changeTheme"
            android:background="@drawable/theme" />
    </FrameLayout>

        <FrameLayout
            android:layout_width="250dp"
            android:layout_gravity="center_horizontal|center"
            android:layout_height="300dp">

            <ImageButton
                android:layout_width="250dp"
                android:layout_gravity="center"
                android:layout_height="300dp"
                android:id="@+id/watch"
                android:background="@drawable/d1"
                android:foregroundGravity="center"
                android:layout_below="@+id/textAd"
                android:layout_centerHorizontal="true" />
            <ImageButton
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_marginBottom="25dp"
                android:layout_marginLeft="2dp"
                android:id="@+id/CounntAdd"
                android:layout_gravity="center_horizontal|bottom"
                android:background="@drawable/standard"
                android:foregroundGravity="center"
                android:layout_below="@+id/textAd"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_marginTop="52dp"
                android:layout_gravity="right"
                android:layout_marginRight="44dp"
                android:id="@+id/textAd"
                android:textColor="#171616"
                android:textSize="62dp"
                android:fontFamily=""
                android:layout_below="@+id/textView"
                android:layout_alignLeft="@+id/textView"
                android:layout_alignStart="@+id/textView"
                android:gravity="center" />
            <ImageButton
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:id="@+id/restz"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="6dp"
                android:layout_marginLeft="34dp"
                android:background="@drawable/standard"
                android:foregroundGravity="center" />

            <ImageButton
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:id="@+id/btnLed"
                android:layout_gravity="center_vertical|right"
                android:layout_marginTop="6dp"
                android:layout_marginRight="34dp"
                android:onClick="ledOnOff"
                android:background="@drawable/standard"
                android:foregroundGravity="center" />


        </FrameLayout>



</LinearLayout>
